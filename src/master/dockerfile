FROM alpine:3.20

RUN apk add --no-cache python3 py3-pip
RUN pip install --break-system-packages fastapi uvicorn python-multipart requests

RUN addgroup -S mastergroup
RUN adduser -S masteruser -G mastergroup

WORKDIR /app
COPY master-new.py .

ENTRYPOINT ["uvicorn", "master-new:master_app", "--host", "0.0.0.0", "--port", "80"]

#docker build -t master ./src/master
